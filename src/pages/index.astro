---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/pages/home.css";
---

<BaseLayout title="Home | Nick Wade">
    <div class="hero-section">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">
                    Building modern deployment solutions for the missions that <span
                        class="gradient-text">matter</span
                    >
                </h1>
                <p class="hero-description text-secondary">
                    Currently working on the Infrastructure team at Onebrief.
                    Please reach out if you want to talk FedRAMP, AWS, Nix, or
                    anything else you are passionate about!
                </p>
                <div class="hero-actions">
                    <a href="/experience" class="btn btn-primary">
                        My Experience
                    </a>
                    <a href="/about" class="btn btn-secondary"> About Me </a>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>
